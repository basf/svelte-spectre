{
	"name": "svelte-spectre",
	"version": "0.4.10",
	"description": "UI-kit based on spectre.css and powered by SvelteJS",
	"main": "./package/index.js",
	"files": [
		"package/"
	],
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"package": "svelte-package && sass src/lib/spectre.scss package/spectre.css  --style=compressed --no-source-map --quiet-deps && prettier --ignore-path .gitignore --write \"{,package/**/}*.{js,ts,md,svelte}\"",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "npm run format && eslint --ignore-path .gitignore .",
		"format": "prettier --ignore-path .gitignore --write \"{,(src|tests|package)/**/}*.{js,ts,md,svelte}\"",
		"test": "uvu tests '.spec.ts' -r tsm -r tests/setup/register -i setup",
		"prepublishOnly": "npm run package",
		"husky:init": "npx husky install",
		"prepare": "husky install"
	},
	"author": "Alexander Volkov",
	"license": "BSD 3-Clause",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/basf/svelte-spectre.git"
	},
	"engines": {
		"node": ">= 14"
	},
	"devDependencies": {
		"@poppanator/sveltekit-svg": "^0.3.4",
		"@sveltejs/adapter-static": "^1.0.0-next.43",
		"@sveltejs/kit": "^1.0.0-next.504",
		"@sveltejs/package": "1.0.0-next.3",
		"@types/jsdom": "^20.0.0",
		"@typescript-eslint/eslint-plugin": "^5.38.1",
		"@typescript-eslint/parser": "^5.38.1",
		"eslint": "^8.24.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"husky": "^8.0.1",
		"jsdom": "^20.0.0",
		"mdsvex": "^0.10.6",
		"pirates": "^4.0.5",
		"prettier": "^2.7.1",
		"prettier-plugin-svelte": "^2.7.1",
		"sass": "^1.55.0",
		"spectre.css": "^0.5.9",
		"svelte": "^3.50.1",
		"svelte-check": "^2.9.1",
		"svelte-preprocess": "^4.10.7",
		"svelte2tsx": "^0.5.19",
		"tslib": "^2.4.0",
		"tsm": "^2.2.2",
		"typescript": "~4.7.4",
		"uvu": "^0.5.6",
		"vite": "^3.1.3"
	},
	"dependencies": {
		"@ctrl/tinycolor": "^3.4.1"
	}
}
